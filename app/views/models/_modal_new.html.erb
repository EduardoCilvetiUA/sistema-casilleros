<div class="modal fade" 
     id="newModelModal" 
     tabindex="-1"
     data-controller="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nuevo Modelo de IA</h5>
        <button type="button" 
                class="btn-close" 
                data-bs-dismiss="modal" 
                aria-label="Close"></button>
      </div>
      
      <%= form_with(model: @new_model, 
                    local: true, 
                    multipart: true,
                    data: { 
                      action: "submit->modal#submitForm"
                    }) do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :name, 'Nombre del Modelo', class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
          
        <div class="mb-3">
          <%= f.label :file, 'Archivo del Modelo (.cc)', class: 'form-label' %>
          <%= f.file_field :file, 
                          class: 'form-control', 
                          accept: '.cc', 
                          required: true %>
          <small class="text-muted">Tama√±o m√°ximo: 15MB. Formatos permitidos: .cc</small>
        </div>


          <div class="mb-3">
            <div class="form-check">
              <%= f.check_box :active, 
                  class: 'form-check-input',
                  value: true,
                  false_value: false %>
              <%= f.label :active, 'Activar/Desactivar', class: 'form-check-label' %>
            </div>
          </div>

          <div class="gestures-section">
            <h6 class="mb-3">Gestos del Modelo</h6>
            
            <div class="gestures-container">
              <%= f.fields_for :gestures do |gesture_form| %>
                <div class="gesture-input-group mb-3">
                  <div class="row">
                    <div class="col">
                      <%= gesture_form.text_field :name, 
                            placeholder: "Nombre del gesto",
                            class: 'form-control',
                            required: true %>
                    </div>
                    <div class="col">
                      <%= gesture_form.select :symbol, 
                            options_for_select(['üëç', 'üëé', 'üëä', '‚úä', 'ü§õ', 'ü´∑', 'ü§û', '‚úå', 'ü´∞', 'ü§ü', 'ü§ò', 'üëå', 'ü§å', 'ü§è', 'ü´≥', 'ü´¥', 'üëà', 'üëÜ', 'üëá', '‚òù', '‚úã', 'üñê', 'üññ', 'ü§ô', 'ü´≤', 'ü´µ']), 
                            { prompt: 'Selecciona un s√≠mbolo' },
                            class: 'form-control',
                            required: true %>
                    </div>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
        
        <div class="modal-footer">
          <button type="button" 
                  class="btn btn-secondary" 
                  data-bs-dismiss="modal">Cancelar</button>
          <%= f.submit 'Crear Modelo', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>