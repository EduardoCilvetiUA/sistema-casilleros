<div class="modal fade" 
     id="editControllerModal<%= controller.id %>" 
     tabindex="-1"
     data-controller="modal"
     aria-labelledby="editControllerModalLabel<%= controller.id %>" 
     aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editControllerModalLabel<%= controller.id %>">Editar Controlador</h5>
        <button type="button" 
        class="btn-close" 
        data-bs-dismiss="modal" 
        aria-label="Close"></button>

      </div>
      
      <%= form_with(model: controller, 
                    local: true,
                    data: { 
                      action: "submit->modal#submitForm"
                    }) do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :name, 'Nombre', class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control', required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :location, 'UbicaciÃ³n', class: 'form-label' %>
            <%= f.text_field :location, class: 'form-control', required: true %>
          </div>
          
          <div class="mb-3">
            <%= f.label :model_id, 'Modelo de IA', class: 'form-label' %>
            <%= f.collection_select :model_id, 
                                  Model.where(active: true), 
                                  :id, 
                                  :name, 
                                  { prompt: 'Selecciona un modelo' }, 
                                  { class: 'form-select', required: true } %>
          </div>
          </div>
        
          <div class="modal-footer">
          <button type="button" 
            class="btn btn-secondary" 
            data-bs-dismiss="modal">Cancelar</button>  
            <%= f.submit 'Actualizar Controlador', 
                        class: 'btn btn-primary',
                        data: { disable_with: 'Actualizando...' } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>