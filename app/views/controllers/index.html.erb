<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Controladores</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newControllerModal">
      <i class="fas fa-plus me-2"></i>Nuevo Controlador
    </button>
  </div>

  <% if @controllers.empty? %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle me-2"></i>
      No hay controladores registrados. ¡Crea uno nuevo!
    </div>
  <% else %>
    <div class="row">
      <% @controllers.each do |controller| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                  <h5 class="card-title"><%= controller.name %></h5>
                  <h6 class="card-subtitle mb-2 text-muted">
                    <i class="fas fa-map-marker-alt me-1"></i>
                    <%= controller.location %>
                  </h6>
                </div>
                <span class="badge <%= controller.is_connected ? 'bg-success' : 'bg-danger' %>">
                  <%= controller.is_connected ? 'Conectado' : 'Desconectado' %>
                </span>
              </div>

              <div class="card-text mb-3">
                <div class="d-flex align-items-center mb-2">
                  <i class="fas fa-box me-2"></i>
                  <span><%= controller.lockers.count %> casilleros</span>
                </div>
                <div class="d-flex align-items-center mb-2">
                  <i class="fas fa-brain me-2"></i>
                  <span>Modelo: <%= controller.model&.name || 'No asignado' %></span>
                </div>
                <% if controller.last_connection %>
                  <div class="d-flex align-items-center">
                    <i class="fas fa-clock me-2"></i>
                    <small class="text-muted">
                      Última conexión: <%= time_ago_in_words(controller.last_connection) %> atrás
                    </small>
                  </div>
                <% end %>
              </div>

              <div class="d-flex gap-2">
                <%= link_to controller_lockers_path(controller), class: "btn btn-primary btn-sm" do %>
                  <i class="fas fa-door-open me-1"></i> Ver Casilleros
                <% end %>
                
                <button type="button" 
                        class="btn btn-outline-secondary btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#editControllerModal<%= controller.id %>">
                  <i class="fas fa-edit me-1"></i> Editar
                </button>
              </div>
            </div>
          </div>
        </div>

        <%= render 'controllers/modal_edit', controller: controller %>
      <% end %>
    </div>
  <% end %>
</div>

<%= render 'controllers/modal_new' %>